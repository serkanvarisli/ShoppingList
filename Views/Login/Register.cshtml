<link rel="stylesheet" href="~/css/register.css" />
<div id="login">
    <h3 class="text-center text-white pt-5"></h3>
    <div class="container">
        <div id="login-row" class="row justify-content-center align-items-center">
            <div id="login-column" class="col-md-6">
                <div id="login-box" class="col-md-12">
                    <form id="login-form" class="form" action="" method="post">
                        <h3 class="text-center text-info">Üye Ol</h3>
                        <div class="form-group">
                            <label for="username" class="text-info">Ad:</label><br>
                            <input type="text" name="name" id="name" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="username" class="text-info">Soyad:</label><br>
                            <input type="text" name="surname" id="surname" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="username" class="text-info">Mail Adresi:</label><br>
                            <input type="text" name="username" id="username" class="form-control">
                        </div>
                        <div>
                        <div class="form-group">
                            <label for="password" class="text-info">Şifre:</label><br>
                            <input type="password" name="password" id="password" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="password" class="text-info">Şifre Tekrarı:</label><br>
                            <input type="password" name="re-password" id="re-password" class="form-control">
                             <i><span name="showText" id="showText" class="textShowPassword">Şifreyi Göster </span><i><input type="checkbox" name="showPassword" id="showPassword" class="form-check-inline" 
                        </div>
                        <div id="register-link" class="text-right">
                            <a asp-action="Index" asp-controller="Login" class="text-info">Giriş Yapın </a>
                        </div>
                        <div class="form-group">
                            <input type="submit" name="submit" class="btn btn-info btn-md button" value="Üye Ol">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
