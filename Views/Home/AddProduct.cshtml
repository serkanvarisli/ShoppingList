@section nav{
	<li class="nav-item">
		<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="List">LİSTE</a>
	</li>
}
<form>
	<h2>ÜRÜN EKLE</h2>
	<div class="container">
		<span>Ürün Seç:</span>
		<select class="form-select" aria-label="Default select example">
			<option>Ürün Seçiniz..</option>
			<option>Ürünler</option>
		</select>
		<br />
		<div class="form-check">
			<input class="form-check-input" type="checkbox" name="addProductDetailRadio" id="addProductDetailRadio">
				Ürün Detay Ekle (opsiyonel)
		</div>
	</div>
	<br />
	<div class="container" style="display:none;" id="hiddenProductDetailContainer">
		<div class="row">
			<div class="col">
				<div class="contact-form">
					<div class="form-group">
						<label class="control-label col-sm-2" for="fname">Ürün Adı: </label>
						<div class="col-sm-10">
							<input type="text" class="form-control" id="" >
						</div>
					</div>
					<div class="form-group">
						<label class="control-label col-sm-2" for="lname">Marka:</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" id="" >
						</div>
					</div>
					<div class="form-group">
						<label class="control-label col-sm-2" for="email">Ürün Adedi: </label>
						<div class="col-sm-10">
							<input type="email" class="form-control" id="" >
						</div>
					</div>
					<div class="form-group">
						<label class="control-label col-sm-2" for="comment">Ürün Detayı:</label>
						<div class="col-sm-10">
							<textarea class="form-control" rows="5" id="" ></textarea>
						</div>
					</div>
					
				</div>
			</div>
		</div>
	</div>
	<div class="form-group">
		<div class="d-flex justify-content-center">
			<button type="button" class="btn btn-success btn-lg">Listeye Ekle</button>
		</div>
	</div>
	<br />
	<br />
</form>
<script src="~/js/addproduct.js" asp-append-version="true"></script>
