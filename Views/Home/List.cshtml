@*@using ShoppingList.ViewModel
@model List<Product>*@

@section nav{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">LİSTELERİM</a>
    </li>
        <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AddProduct" id="addPruductNav">ÜRÜN EKLE</a>
        </li>
}
<form>
    <div class="row">  
        <div class="col">
            <a asp-controller="Home" asp-action="AddProduct" >
                <button type="button" class="btn btn-success" id="addProduct" />Ürün Ekle</button>
            </a>
        </div>
        <div class="col">
            <button type="button" class="btn btn-primary float-right" id="startShopping">ALIŞVERİŞE ÇIKIYORUM</button>
            <button type="button" class="btn btn-secondary float-right" id="endShopping" style="display:none;">ALIVERİŞ TAMAMLANDI</button>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            
        </div>
    </div>
    
        <center><h3>ÜRÜNLER</h3></center>
    <div class="row">
        @*@foreach (var item in Model)
        {*@
            <div class="col-sm-2">
                <div class="card">
                    <div class="card-body">
                        <img class="card-img-top" src="/images/products/ProductImage" alt="Card image cap">
                        <center>
                            <h5 class="card-title">@*@item.ProductName*@ Ürün adı</h5>
                            <div id="bought" style="display:none;">
                                <span>Aldım </span><input type="checkbox" />
                            </div>
                            <p></p>
                            <a asp-action="Product" asp-controller="Home">
                                <button type="button" class="btn btn-primary" id="beforeShopping">Ürün Detayı</button>
                            </a>
                            <a asp-action="ProductReadOnly" asp-controller="Home">
                                <button type="button" class="btn btn-secondary" id="afterShopping" style="display:none;">Ürün Detayı</button>
                            </a>
                            <p></p>
                            <button type="button" class="btn btn-danger" id="removeProduct">Ürünü Çıkar</button>
                        </center>
                    </div>
                </div>
            </div>
        @*}*@
    </div>
</form>

<script src="~/js/list.js" asp-append-version="true"></script>
