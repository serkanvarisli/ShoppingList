@using ShoppingList.ViewModel
@model List<UserProductViewModel>

@section nav{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">LİSTELERİM</a>
    </li>
        <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ProductSelectToAdd" asp-route-listId="@ViewBag.ListId" id="addPruductNav">ÜRÜN EKLE</a>
        </li>
}
@section user {
    <span class="dropdown-item-text text text-black-50">@TempData["username"]</span>
    }
<form asp-action="List" asp-controller="Home" asp-route-listId="@ViewBag.ListId" method="post" class="form-inline justify-content-end">
    <div>
        
        <select name="categoryFilter" asp-items="@ViewBag.Categories">

                <option value="all">Tüm Kategoriler</option>
            @foreach (var item in Model)
            {
                
            }
        </select>

        <button type="submit" class="btn form-control btn-outline-secondary btn-sm" style="margin-bottom:5px; margin-top:2.5px;margin-left:2.5px;">Filtrele</button>
    </div>
</form>

<form asp-action="List" asp-controller="Home" asp-route-listId="@ViewBag.ListId" method="post" class="form-inline justify-content-end">
    
    <div class="input-group">
        <input type="text" name="p" class="form-control" placeholder="Ürün Ara.." />
        <div class="input-group-append">
            <button type="submit" class="btn btn-secondary">Ara</button>
        </div>
    </div>
</form>

<br />
<form>
    <div class="row">  
        <div class="col">

            <a asp-controller="Home" asp-action="ProductSelectToAdd" asp-route-listId="@ViewBag.ListId">
                        <button type="button" class="btn btn-success" id="addProduct">Ürün Ekle</button>
                    </a>
        </div>
        <div class="col">
            <button type="button" class="btn btn-primary float-right" id="startShopping">ALIŞVERİŞE ÇIKIYORUM</button>
            <button type="button" class="btn btn-secondary float-right" id="endShopping" style="display:none;">ALIVERİŞ TAMAMLANDI</button>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            
        </div>
    </div>
    
        <center><h3>ÜRÜNLER</h3></center>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-2">
                <div class="card">
                    <div class="card-body">
                        <center>
                            <b>
                            <p class="card-text " style="font-size:15px;">@item.CategoryName</p>
                            </b>
                            </center>
                        <img class="card-img-top" src="/images/products/@item.ProductImage" alt="Card image cap">
                        <center>
                            <h5 class="card-title">@item.ProductName</h5>
                            <div id="bought" style="display:none;">
                                <span>Aldım </span><input type="checkbox" />
                            </div>
                            <p></p>
                            <a asp-action="ProductDetail" asp-controller="Home" asp-route-productDetailId="@item.ProductDetailId">
                                <button type="button" class="btn btn-primary" id="beforeShopping">Ürün Detayı</button>
                            </a>
                            <a asp-action="ProductReadOnly" asp-controller="Home">
                                <button type="button" class="btn btn-secondary" id="afterShopping" style="display:none;">Ürün Detayı</button>
                            </a>
                            <p></p>
                            <button type="button" class="btn btn-danger" id="removeProduct">Ürünü Çıkar</button>
                        </center>
                    </div>
                </div>
            </div>
        }
    </div>
</form>
<br />
<br />
<br />
<script src="~/js/list.js" asp-append-version="true"></script>
