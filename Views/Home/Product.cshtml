@section nav{
	<li class="nav-item">
		<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="List" >LİSTE</a>
	</li>
}

<form>
	<div class="container">
		<div class="row">
			<div class="col-md-8">
				<div class="contact-form">
					<h2>Ürün Detayları</h2>
					<div class="form-group">
						<label class="control-label col-sm-2" for="fname">Ürün Adı: </label>
						<div class="col-sm-10">
							<input type="text" class="form-control" id="tb1" readonly>
						</div>
					</div>
					<div class="form-group">
						<label class="control-label col-sm-2" for="lname">Marka:</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" id="tb2" readonly>
						</div>
					</div>
					<div class="form-group">
						<label class="control-label col-sm-2" for="email">Ürün Adedi: </label>
						<div class="col-sm-10">
							<input type="email" class="form-control" id="tb3" readonly>
						</div>
					</div>
					<div class="form-group">
						<label class="control-label col-sm-2" for="comment">Ürün Detayı:</label>
						<div class="col-sm-10">
							<textarea class="form-control" rows="5" id="tb4" readonly></textarea>
						</div>
					</div>
					<div class="form-group">
						<div class="col-sm-offset-2 col-sm-10 d-flex justify-content-center">
							<button type="button" class="btn btn-secondary" id="editproduct">Düzenle</button>
							<button type="submit" class="btn btn-warning" id="saveproduct" hidden>Kaydet</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

</form>
<script src="~/js/product.js" asp-append-version="true"></script>
